<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <PreferenceCategory app:title="Share options">

        <EditTextPreference
            android:key="Share subject"
            android:title="Share subject"
            android:id="@+id/shareEditSub"
            android:summary="@string/shareTitle" />
        <EditTextPreference
            android:key="Share text"
            android:title="share text"
            android:id="@+id/shareEdit"
            android:summary="@string/sharemessage" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Rendering options" android:summary="Level of sketchiness and color saturation">
        <SeekBarPreference
            app:title="Sketchiness"
            app:key="sketch"
            app:summary="@string/sketchiness"
            app:min="0"
            android:max="100"
            app:defaultValue="15"
            app:enabled="true"
            app:showSeekBarValue="true"/>
        <SeekBarPreference
            app:key="Saturation"
            app:title="Saturation"
            app:summary="@string/saturation"
            app:defaultValue="15"
            app:min="0"
            android:max="100"
            app:enabled="true"
            app:showSeekBarValue="true"
            />

</PreferenceCategory>



</PreferenceScreen>
